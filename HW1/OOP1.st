f error: 'invalid input']! !!PolyStream methodsFor: 'updating' stamp: 'initialize 4/8/2023 15:14'!addCoef: coef withExp: exp	| tempBlock |	(((coef isKindOf: Integer) and: [exp isKindOf: Integer]) and: [exp >= 0])	ifTrue:	[	tempBlock := block.	block := [:x :ignored | (tempBlock value: x value: ignored) + 									((ignored includes: exp) 									ifTrue:[0] 									ifFalse:[coef*(x raisedToInteger: exp)])									]	]	ifFalse: [self error: 'invalid input']! !!PolyStream methodsFor: 'updating' stamp: 'initialize 4/8/2023 15:16'!multiplyBy: anInteger	| tempBlock |	(anInteger isKindOf: Integer)	ifTrue:	[		tempBlock := block.		block := [:x :ignored | anInteger*(tempBlock value: x value: ignored)]	]	ifFalse: [self error: 'invalid input'].! !!PolyStream methodsFor: 'updating' stamp: 'initialize 4/8/2023 15:19'!substitute: anInteger	| tempBlock |	(anInteger isKindOf: Integer)	ifTrue:	[		tempBlock := block.		block := [:x :ignored | tempBlock value: (anInteger*x) value: ignored]	]	ifFalse: [self error: 'invalid input'].! !!PolyStream methodsFor: 'initialize-release' stamp: 'initialize 4/8/2023 14:08'!initialize	block := [:x :ignored | 0]! !Object subclass: #Polynom	instanceVariableNames: 'monoms'	classVariableNames: ''	poolDictionaries: ''	category: 'OOP1'!!Polynom methodsFor: 'initialize-release' stamp: 'initialize 4/7/2023 15:34'!initialize	monoms := Dictionary new.! !!Polynom methodsFor: 'accessing' stamp: 'initialize 4/7/2023 16:12'!asDictionary	|resultDict|	resultDict := Dictionary new.	monoms do: [:monom | resultDict add: (monom exp) -> (monom coef) ].	^resultDict		! !!Polynom methodsFor: 'actions' stamp: 'initialize 4/7/2023 17:46'!add: aPolynom	|resultPoly tempMonom|			(aPolynom isKindOf: Polynom)	ifTrue:	[		resultPoly := Polynom new.		tempMonom := Monom new.		monoms do: [:monom | resultPoly addMonom: monom].		aPolynom asDictionary keysAndValuesDo: [:exp :coef | 					tempMonom exp: exp.			